{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es5",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
        "./node_modules/@types"
     ]
  },
  "includes": [
    "src/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../release",
    "../test-app",
    "../aot"
  ]
}